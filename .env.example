# GAPIT3 Pipeline - Environment Configuration
# Copy this file to .env and customize for your environment

# Kubernetes namespace
NAMESPACE=runai-talmo-lab

# Data paths (must be accessible from cluster nodes)
DATA_PATH=/hpi/hpi_dev/users/eberrigan/20251107_GAPIT_pipeline_tests/data
OUTPUT_PATH=/hpi/hpi_dev/users/eberrigan/20251107_GAPIT_pipeline_tests/outputs

# Docker image
IMAGE=ghcr.io/salk-harnessing-plants-initiative/gapit3-gwas-pipeline:latest

# Resource allocation per trait
CPU_CORES=12
MEMORY_GB=32

# Parallelism (max concurrent trait jobs)
MAX_PARALLELISM=50

# Trait range (for parallel pipeline)
START_TRAIT_INDEX=2    # First trait column (after Taxa)
END_TRAIT_INDEX=187    # Last trait column (186 traits total)

# GAPIT models (comma-separated)
MODELS=BLINK,FarmCPU
