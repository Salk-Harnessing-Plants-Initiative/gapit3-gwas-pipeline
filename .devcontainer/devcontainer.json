{
  "name": "GAPIT3 GWAS Pipeline (Dev)",
  "dockerFile": "../Dockerfile",
  "context": "..",
  "build": {
    "args": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "REditorSupport.r",
        "Ikuyadeu.r-lsp",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "r.rterm.linux": "/usr/bin/R",
        "r.rterm.option": [
          "--no-save",
          "--no-restore"
        ],
        "r.lsp.enabled": true,
        "r.bracketedPaste": true,
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.R": "r",
          "*.Rmd": "rmd"
        }
      }
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/data,type=bind",
    "source=${localWorkspaceFolder}/outputs,target=/outputs,type=bind",
    "source=${localWorkspaceFolder}/logs,target=/logs,type=bind"
  ],

  "postCreateCommand": "echo 'GAPIT3 Dev Container Ready!' && R --version",

  "remoteUser": "root",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
}
